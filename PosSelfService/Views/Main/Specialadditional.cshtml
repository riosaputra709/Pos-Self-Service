@using PosSelfService.Common;
@{
    ClsBarang produk = (ClsBarang)ViewData["produk"];
    int quantity = (int)ViewData["quantity"];
    List<ClsMasr> listMasr = (List<ClsMasr>)ViewData["listMasr"];
    List<ClsMmsr> listMmsr = (List<ClsMmsr>)ViewData["listMmsr"];
    List<ClsMasr> groupMasr = (List<ClsMasr>)ViewData["groupMasr"];
    List<String> groupMmsr = (List<String>)ViewData["groupMmsr"];

    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Special Additional</title>
    <link rel="stylesheet" href="~/Assets/css/styleee2.css" />
    <link href="~/Assets/css/bootstrap.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Assets/css/loader.css">
    <link rel="stylesheet" href="~/Assets/css/sweetalert2.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        .btn.active {
            background-color: #dc3545; /* Warna merah (btn-danger) saat tombol aktif */
            border-color: #dc3545; /* Warna garis pinggiran merah (btn-danger) saat tombol aktif */
            color: #fff; /* Warna teks menjadi putih saat tombol aktif */
        }
    </style>
</head>
<body>
    <div class="loader-div">
        <img class="loader-img" src="~/Assets/image/loading.gif" style="height: 40px;width: auto;" />
    </div>

    <div class="menu">
        <div class="div-auto" style="background-color: white;">
            <form data-multi-step="" class="multi-step-form">
                <div class="container-fluid" style="padding-top: 36px;padding-left: 22px;">
                    <div class="row">
                        <div class="col-lg-3 col-md-3 col-4 d-flex align-items-center">
                            <div class="card">
                                <img src="@produk.ProductImageString" alt="" class="img-thumbnail" style="max-height: 286px;">
                            </div>
                        </div>
                        <div class="col-6">
                            <h3>@produk.Merk</h3>
                            <h3>@produk.Nama</h3>
                            <p class="text-justify" style="margin-top: 20px;">
                                @produk.Desc2
                            </p>
                        </div>
                        <div class="col-lg-3 col-md-3 col-2 d-flex justify-content-center">
                            <b>
                                <h4 class="text-primary" id="productModalPrice">
                                    Rp @produk.HargaJualRp.ToString("N0")
                                </h4>
                            </b>
                        </div>
                    </div>
                    <hr>
                </div>

                <div class="container-fluid coffeedetail">

                    @for (int i = 0; i < groupMmsr.Count; i++)
                    {
                        <div class="row" style="padding: 11px" rowKelSpecReq>
                            <div class="col-lg-4 col-md-4 col-sm-4 col-12">
                                <h5 id="@groupMmsr[i]" style="margin-bottom: 20px;" lblKelSpecReq>Pilih :</h5>
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-8 col-12 d-flex justify-content-end">
                                <p>Pilih salah satu</p>
                            </div>
                            @for (int j = 0; j < listMmsr.Count; j++)
                            {
                                if (listMmsr[j].PLU_BHN_BAKU == groupMmsr[i])
                                {
                                    <div class="col-lg-3 col-md-3 col-sm-4 col-4 d-flex justify-content-center" style="margin-bottom:20px">
                                        <button type="button" class="button-wrap text-truncate btn btn-outline-secondary" style="box-shadow: 1px 3px #888888;" data-max-active="1"
                                                value= "@listMmsr[j].KET_SPEC_REQ">
                                            @listMmsr[j].KET_SPEC_REQ
                                            <h6 style="font-size: smaller;margin-top:16px" class="text-truncate">@listMmsr[j].VALUE_SR @listMmsr[j].SATUAN</h6>
                                        </button>
                                    </div>
                                }
                            }
                        </div>
                        <hr />
                    }

                    @for (int i = 0; i < groupMasr.Count; i++)
                    {
                        <div class="row" style="padding: 11px" rowKelSpecReq>
                            <div class="col-lg-4 col-md-4 col-sm-4 col-12">
                                <h5 id="@groupMasr[i].KEL_SPCL_REQ" style="margin-bottom: 20px;" lblKelSpecReq>Pilih @groupMasr[i].KEL_SPCL_REQ :</h5>
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-8 col-12 d-flex justify-content-end">
                                <p>Optional, Pilih maksimal @groupMasr[i].MAX_ADD @groupMasr[i].KEL_SPCL_REQ</p>
                            </div>
                            @for (int j = 0; j < listMasr.Count; j++)
                            {
                                if (listMasr[j].KEL_SPCL_REQ == groupMasr[i].KEL_SPCL_REQ)
                                {
                                    <div class="col-lg-3 col-md-3 col-sm-4 col-4 d-flex justify-content-center" style="margin-bottom:20px">
                                        <button type="button" class="button-wrap text-truncate btn btn-outline-secondary" style="box-shadow: 1px 3px #888888; min-height: 68px;" data-max-active="@listMasr[j].MAX_ADD"
                                                value="@listMasr[j].KET_SPECIAL_REQUEST">
                                            @listMasr[j].KET_SPECIAL_REQUEST
                                        </button>
                                    </div>
                                }
                            }
                        </div>
                        <hr />
                     }
                </div>
                <hr>

                <footer style="padding-bottom: 35px;padding-top: 23px;">
                    <div class="container-fluid">
                        <div class="input-group d-flex justify-content-center align-items-center">
                            <button class="nav-link btn btn-secondary btn-lg " href="/Main/Index" style="margin-right: 12px; height: 70px;padding: 20px;">
                                Kembali
                            </button>
                            <button type="button" class="btn btn-outline-secondary" style="height: 70px;padding: 20px;" onclick="decrementQuantity()">-</button>
                            <h5 id="productQuantity" class="text-center" style="width: 70px;margin-top: 8px;">@quantity</h5>
                            <button type="button" class="btn btn-primary" style="height: 70px;padding: 20px;" onclick="incrementQuantity()">+</button>
                            <a class="nav-link btn btn-danger btn-lg" style="margin-left: 12px;height: 70px;padding: 20px;color:white" onclick="AddToCart()">Lanjut</a>
                        </div>
                    </div>
                </footer>

            </form>
        </div>
    </div>
    <script src="~/Assets/js/sweetalert2.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Assets/js/bootstrap.min.js"></script>
    <script>

        const buttons = document.querySelectorAll("button[data-max-active]");
        buttons.forEach(button => {
            button.addEventListener("click", () => {
                const maxActive = parseInt(button.getAttribute("data-max-active"));
                const group = button.parentElement;
                const groupParent = group.parentElement;
                const activeButtons = groupParent.querySelectorAll(".btn.active").length;

                if (button.classList.contains("active")) {
                    button.classList.remove("active");
                    button.classList.add("btn-outline-secondary");
                } else if (activeButtons < maxActive) {
                    button.classList.remove("btn-outline-secondary");
                    button.classList.add("active");
                }
            });
        });

        function decrementQuantity() {
            var quantityLabel = document.getElementById('productQuantity');
            var currentValue = parseInt(quantityLabel.innerText, 10);

            // Memastikan nilai tidak kurang dari minimum yang ditetapkan (1)
            if (currentValue > 1) {
                quantityLabel.innerText = currentValue - 1;
            }
        }

        function incrementQuantity() {
            var quantityLabel = document.getElementById('productQuantity');
            var currentValue = parseInt(quantityLabel.innerText, 10);

            quantityLabel.innerText = currentValue + 1;
        }

        function AddToCart() {
            $(".loader-div").show();

            var additionalBhn = [];
            const additionalKel = document.querySelectorAll("div[rowKelSpecReq]");
            additionalKel.forEach(group => {
                const btnActive = group.querySelectorAll(".btn.active");
                const lblSpec = group.querySelector("h5[lblKelSpecReq]");
                var idLbl = lblSpec.id;
                var bhn = "";

                btnActive.forEach(button => {
                    bhn += button.value + ",";
                });

                if (bhn != "") {
                    bhn.substring(0, bhn.length - 1);
                }

                var item = {
                    kelSpecReq: idLbl,
                    objAdditional: bhn
                };
                additionalBhn.push(item)
            });

            $.ajax({
                type: "POST",
                url: "/Main/TambahKeKeranjang",
                data: {
                    prdcd: @produk.PLU,
                    qty: $("#productQuantity").text(),
                    bahan: additionalBhn
                },
                success: function (data) {
                    if (data.indexOf('<div id="errorMessagePanelCart"') === -1) {
                        $(".loader-div").hide();
                        Swal.fire({
                            title: "Sukses !",
                            text: "Pesananmu berhasil ditambahkan ke dalam keranjang",
                            icon: "success",
                            showCancelButton: false,
                            confirmButtonColor: "#3085d6",
                            cancelButtonColor: "#d33",
                            confirmButtonText: "OK"
                        }).then((result) => {
                            window.location.href = "/Main/Index";
                        });
                    } else {
                        $(".loader-div").hide();
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: 'gagal menambahkan produk ke keranjang'
                        });
                    }
                },
                error: function (data) {
                    $(".loader-div").hide();
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'gagal menambahkan produk ke keranjang'
                    })
                }
            });
        }


    </script>
</body>
</html>
